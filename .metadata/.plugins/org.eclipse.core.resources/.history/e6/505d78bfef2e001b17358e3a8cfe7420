package ex7;

import java.util.Scanner;

class SwitchClass{
	public String getDdi(int i){
		
		String ddi = "";
		
		switch(i % 12) {
			case 0 : ddi = "원숭이";
			break;
			case 1 : ddi = "닭";
			break;
			case 2 : ddi = "개";
			break;
			case 3 : ddi = "돼지";
			break;
			case 4 : ddi = "쥐";
			break;
			case 5 : ddi = "소";
			break;
			case 6 : ddi = "호랑이";
			break;
			case 7 : ddi = "토끼";
			break;
			case 8 : ddi = "용";
			break;
			case 9 : ddi = "뱀";
			break;
			case 10 : ddi = "말";
			break;
			case 11 : ddi = "양";
			break;
		}
		return ddi+ "띠";
	} //getDdi end

	public int getAge(int birthYear) {
		int age = 2020 - birthYear + 1;
		return age;
	} //getAge end
	
	public boolean isAdult(int bYear) {
		boolean bAdult = false;
		
		if(getAge(bYear) > 19) {
			bAdult = true;
		}else {
			bAdult = false;
		}
		return bAdult;
	}
}

public class SwitchTest {
	
	public static void main(String[] args) {
		
		//int birthYear = 1950;
		
		
		Scanner scc = new Scanner(System.in);
		System.out.println("이름을 적어주세요.");
		scc.nextLine();
		
		System.out.println("출생년도를 입력하세요!");
		int birthYear = scc.nextInt();
		
		SwitchClass sc = new SwitchClass();
		//나이
		int age = sc.getAge(birthYear);
		System.out.println("나의 나이는 " + age + " 세");
		
		//띠
		String ddiStr = sc.getDdi(birthYear);
		System.out.println("나의 띠는 " + ddiStr);
		
		//성인여부 확인
		boolean bAdult = sc.isAdult(birthYear);
		if(bAdult == true) {
			System.out.println("성인입니다.");
		}else {
			System.out.println("미성년자 입니다.");
		}
	}

}
