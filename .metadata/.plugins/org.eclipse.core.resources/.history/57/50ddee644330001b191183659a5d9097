package ex9;
class Star2{
	
	public void star1() {
		for (int i = 1; i <= 5; i++) {
			for (int j = 1; j <= i; j++) {
				System.out.print(" * ");
			}
			System.out.println("");
		}
	}
	
	public void star2() {
		for (int i = 5; i >= 1; i--) {
			for (int j = 1; j <= i; j++) {
				System.out.print(" * ");
			}
			System.out.println("");
		}
	}
	
	public void star3() {
		for (int i = 0; i < 5; i++) {
			for (int j = 5; j > i; j--) {
				System.out.print("-");
			}
			for(int j1 = 0; j1 <  i; j1++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
	}
	
	public void star4() {
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 4; j++) {
				System.out.print("-");
			}
			for(int k = 4; k >= i; k--) {
				System.out.print("*");
			}
			System.out.println();
		}
		
	}
}

public class StarTest2 {

	public static void main(String[] args) {
		Star2 st2 = new Star2();
		st2.star1();
		System.out.println();
		st2.star2();
		System.out.println();
		st2.star3();
		System.out.println();
		st2.star4();
	}

}
