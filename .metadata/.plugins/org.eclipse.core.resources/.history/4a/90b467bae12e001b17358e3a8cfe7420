package ex7;

import java.util.Date;

public class IfTest2 {

	public static void main(String[] args) {
		//오전 시간 < 12 
		//정오 시간 == 12
		//오후 시간 > 12 
		
		Date date = new Date();
		String dd = date.toLocaleString();
		
		int aa = Integer.parseInt(dd);
		
		if(aa > 12) {
			System.out.println("오후");
		}else if(aa < 12) {
			System.out.println("오전");
		}else if(aa == 12){
			System.out.println("정오");
		}
	}

}
